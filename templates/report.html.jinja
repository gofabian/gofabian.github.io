{%- set weekdays = ['Mon','Tue','Wed','Thu','Fri','Sat','Sun'] -%}

<!DOCTYPE html>
<html>
<head>
    <title>{{ weekdays[timestamp_start.weekday()] }} {{ timestamp_start.strftime("%d.%m.%y %H:%M") }} | Stock Screener</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">

    <style>
        body {
            padding-bottom: 700px;
        }

        h1 a {
            text-decoration: none;
        }

        table {
            margin-top: 30px;
            border-spacing: 0;
        }

        td, th {
            padding: 10px;
            text-align: left;
        }

        td:has(a), th:has(a) {
            padding: 0;
        }

        td a, th a {
            padding: 10px;
            display: block;
        }

        th a:focus {
            color: red;
        }

        .bgcolor-green {
            background-color: #C1F5C1;
        }
        .bgcolor-red {
            background-color: #FF8A8A;
        }

        tr.hidden {
            display: none;
        }

        th[data-col] {
            cursor: pointer;
        }
    </style>
</head>
<body>

<div class="w3-container w3-green">
    <h1>
        <a href="#" onclick="window.location.reload();">
            {{ weekdays[timestamp_start.weekday()] }} {{ timestamp_start.strftime("%d.%m.%y %H:%M") }}
        </a>
    </h1>
</div>

{%- macro bgcolorclass(text) -%}
    {%- set mapping = {
        'up': 'bgcolor-green', 'down': 'bgcolor-red',
        'buy': 'bgcolor-green', 'sell': 'bgcolor-red'
    } -%}
    {{- mapping.get(text, 'none') -}}
{%- endmacro -%}

{%- macro arrow(text) -%}
    {%- set mapping = { 'up': '⇗', 'down': '⇘'} -%}
    {{- mapping.get(text, '-') -}}
{%- endmacro %}

<div class="w3-row-padding">
    <table>
        <tr>
            <th><a href="https://de.tradingview.com/chart/?symbol=SPY" target="_blank">SPY</a></th>
            <td class="{{ bgcolorclass(spy_trend_1d) }}">1D{{- arrow(spy_trend_1d) }}</td>
            <td class="{{ bgcolorclass(spy_trend_1w) }}">1W{{- arrow(spy_trend_1w) }}</td>
            <td style="width: 50px"></td>
            <td style="padding: 0px">
                <button class="w3-button w3-green" onclick="copyFilteredSymbols(this)">
                    Copy filtered stocks
                </button>
            </td>
        </tr>
    </table>

    <table id="dataTable">
        <thead>
            <tr>
                <th data-col="0" style="border-bottom: 1px solid black;">Stock</th>
                <th data-col="1" style="border-bottom: 1px solid black;">B/S</th>
                <th data-col="2" style="border-bottom: 1px solid black;">1D</th>
                <th data-col="3" style="border-bottom: 1px solid black;">1W</th>
                <th style="border-bottom: 1px solid black; border-left: 1px solid black;">Sector</th>
                <th data-col="5" style="border-bottom: 1px solid black;">1D</th>
                <th data-col="6" style="border-bottom: 1px solid black;">1W</th>
            </tr>
        </thead>
        <tbody>
            {% for m in metadatas_candle %}
            <tr data-symbol="{{ m.symbol }}">
                {% set buy = m.advice=='buy' and m.trend_1d == 'up' and m.trend_1w == 'up' -%}
                {% set sell = m.advice=='sell' and m.trend_1d == 'down' and m.trend_1w == 'down' -%}
                {% set stock_color = 'green' if buy else ('red' if sell else 'none') -%}
                <th class="bgcolor-{{stock_color}}">
                    <a href="https://de.tradingview.com/chart/?symbol={{ m.symbol }}" target="_blank">{{ m.symbol }}</a>
                </th>
                <td class="{{ bgcolorclass(m.advice) }}" style="text-transform: uppercase;">{{ m.advice }}</td>
                <td class="{{ bgcolorclass(m.trend_1d) }}">
                    <a href="{{ m.symbol }}/metadata.json" style="text-decoration: none;">
                        1D{{ arrow(m.trend_1d) }}
                    </a>
                </td>
                <td class="{{ bgcolorclass(m.trend_1w) }}">
                    <a href="{{ m.symbol }}/chart.html" style="text-decoration: none;">
                        1W{{ arrow(m.trend_1w) }}
                    </a>
                </td>
                <th style="border-left: 1px solid black;">
                    <a href="https://de.tradingview.com/chart/?symbol={{ m.sector }}" target="_blank">{{ m.sector }}</a>
                </th>
                <td class="{{ bgcolorclass(m.sector_trend_1d) }}">1D{{ arrow(m.sector_trend_1d) }}</td>
                <td class="{{ bgcolorclass(m.sector_trend_1w) }}">1W{{ arrow(m.sector_trend_1w) }}</td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
</div>

<script>
    const filterStates = {};

    document.querySelectorAll('#dataTable th[data-col]').forEach(th => {
        const colIndex = parseInt(th.dataset.col);
        filterStates[colIndex] = 'neutral';

        th.addEventListener('click', () => {
            th.classList.remove('bgcolor-green', 'bgcolor-red');

            if (filterStates[colIndex] === 'neutral') {
                filterStates[colIndex] = 'green';
                th.className = 'bgcolor-green';
            } else if (filterStates[colIndex] === 'green') {
                filterStates[colIndex] = 'red';
                th.className = 'bgcolor-red';
            } else {
                filterStates[colIndex] = 'neutral';
                th.className = '';
            }

            filterTable();
        });
    });

    let stocks = [];

    function filterTable() {
        const rows = document.querySelectorAll('#dataTable tbody tr');
        stocks = [];

        rows.forEach(row => {
            let showRow = true;
            const cells = row.querySelectorAll('td, th');

            // Prüfe alle aktiven Filter
            for (let colIndex in filterStates) {
                const filterState = filterStates[colIndex];

                if (filterState !== 'neutral') {
                    const cell = cells[colIndex];
                    const requiredClass = `bgcolor-${filterState}`;

                    // Wenn Zelle nicht die erforderliche Klasse hat, Zeile ausblenden
                    if (!cell.classList.contains(requiredClass)) {
                        showRow = false;
                        break;
                    }
                }
            }

            row.classList.toggle('hidden', !showRow);

            if (showRow) {
                stocks.push(row.dataset.symbol);
            }
        });
    }
</script>

<script>
    function copyFilteredSymbols(button) {
        const text = stocks.join(',');
        copyToClipboard(text, button);
    }

    function copyToClipboard(text, button) {
        if (navigator.clipboard && navigator.clipboard.writeText) {
            navigator.clipboard.writeText(text).then(() => {
                showSuccess(button);
            }).catch(err => {
                console.error('Fehler beim Kopieren:', err);
                fallbackCopy(text, button);
            });
        } else {
            fallbackCopy(text, button);
        }
    }

    function fallbackCopy(text, button) {
        const textarea = document.createElement('textarea');
        textarea.value = text;
        textarea.style.position = 'fixed';
        textarea.style.opacity = '0';
        document.body.appendChild(textarea);
        textarea.select();

        try {
            document.execCommand('copy');
            showSuccess(button);
        } catch (err) {
            console.error('Fallback fehlgeschlagen:', err);
        }

        document.body.removeChild(textarea);
    }

    function showSuccess(button) {
        const originalText = button.innerText;
        button.innerText = '✓ Kopiert!';
        button.classList.remove('w3-green');
        button.classList.add('w3-blue');

        setTimeout(() => {
            button.innerText = originalText;
            button.classList.remove('w3-blue');
            button.classList.add('w3-green');
        }, 2000);
    }
</script>

</body>
</html>